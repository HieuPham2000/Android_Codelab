<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f2f2"
    tools:context=".ui.calculator.CalculatorFragment">

    <TextView
        android:id="@+id/text_calculation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="123 x 4 ="
        android:textAlignment="textEnd"
        android:textColor="#636363 "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="368dp"
        android:layout_height="137dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical|end"
        android:maxLength="8"
        android:maxLines="1"
        android:text="492"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="100sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="40sp"
        app:autoSizeStepGranularity="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_calculation" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_result"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_number"
            android:text="8"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_5"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_7"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/btn_number"
            android:text="."
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_0"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_calculate"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:cornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_dot"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_number"
            android:text="9"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_6"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_8"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_number"
            android:text="5"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_2"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_4"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_control"
            android:text="\u00D7"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_minus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_9"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_division"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/btn_control"
            android:text="\u00F7"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_backspace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_control"
            android:text="\u002B"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_equal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_3"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_control"
            android:text="\u2212"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_6"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_CE"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/btn_control"
            android:text="CE"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_7"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_C"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/btn_control"
            android:text="C"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_8"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_CE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_number"
            android:text="1"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_sign"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_number"
            android:text="2"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_0"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_1"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/btn_number"
            android:text="0"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_sign"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_number"
            android:text="7"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_4"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_number"
            android:text="3"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_dot"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_2"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_number"
            android:text="4"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_1"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_number"
            android:text="6"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/btn_3"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_5"
            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/btn_number"
            android:text="\u207A\u2215\u208B"
            android:textColor="#000000"
            android:textSize="25sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.22" />

        <ImageButton
            android:id="@+id/btn_backspace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/btn_control"
            android:elevation="2dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_9"
            app:layout_constraintHeight_percent="0.18"
            app:layout_constraintStart_toEndOf="@+id/btn_C"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.22"
            app:srcCompat="@drawable/ic_outline_backspace_24"
            tools:ignore="SpeakableTextPresentCheck,VectorDrawableCompat" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>